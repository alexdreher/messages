= form_for [:admin, @admin_message] do |f|
  -if @admin_message.errors.any?
    #error_explanation
      %h2= "#{pluralize(@admin_message.errors.count, "error")} prohibited this admin_message from being saved:"
      %ul
        - @admin_message.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :sender_id
    = f.text_field :sender_id
  .field
    = f.label :recipient_id
    = f.text_field :recipient_id
  .field
    = f.label :subject
    = f.text_field :subject
  .field
    = f.label :body
    = f.text_area :body
  .actions
    = f.submit 'Save'
